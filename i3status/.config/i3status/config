general {
        colors = true
        interval = 5
}

order += "volume master"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
}

volume master {
        format = ": %volume"
        format_muted = ": muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %I:%M %p"
}
